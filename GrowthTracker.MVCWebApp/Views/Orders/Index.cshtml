@model IEnumerable<GrowthTracker.Repositories.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Username)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Username)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a> |
                    <a href="javascript:void(0);" onclick="deleteItem('@item.OrderId')" class="text-danger fw-bold">X</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form id="deleteForm" asp-action="DeleteConfirmed" method="post" style="display:none;">
    <input type="hidden" name="id" id="deleteId" />
</form>

<script type="text/javascript">
    function deleteItem(orderId) {
        if (confirm('Are you sure you want to delete this item?')) {
            document.getElementById('deleteId').value = orderId;
            document.getElementById('deleteForm').submit();
        }
    }
</script>
